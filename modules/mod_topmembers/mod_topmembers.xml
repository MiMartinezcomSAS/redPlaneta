<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<extension version="2.5" type="module" client="site" method="upgrade">
	<name>Comunidad - Top de Miembros</name>
	<author>JomSocial Team</author>
	<creationDate>March 2011</creationDate>
	<copyright>Copyright (C) 2008 - 2010 JomSocial. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@jomsocial.com</authorEmail>
	<authorUrl>http://www.jomsocial.com</authorUrl>	
	<version>3.0.5.3</version>
	<description>Muestra el Top de miembros</description>
	<languages>
		<language tag="en-GB">en-GB.mod_topmembers.ini</language>
		<language tag="en-GB">en-GB.mod_topmembers.ini</language>
	</languages>
	<files>
		<filename module="mod_topmembers">mod_topmembers.php</filename>
		<filename>mod_topmembers.xml</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<params>
		<param name="cache" type="list" default="1" label="Cache" description="Seleccione si desea usar la cache">
			<option value="1">Usar global</option>
			<option value="0">Sin cache</option>
		</param>
		
		<param name="count" type="text" default="10" label="Cambiar el número de miembros a mostrar" description="Número de miebros a mostrar en el Top (Por defecto 10)" />
		
		<param name="show_avatar" type="list" default="1" label="Mostrar avatar" description="Seleccione si desea mostrar los avatares">
			<option value="1">Si</option>
			<option value="0">No</option>
		</param>
		
		<param name="show_karma" type="list" default="1" label="Mostrar Karma / Puntos" description="Seleccione si desea mostrar el Karma o los Puntos">
			<option value="1">Karma</option>
			<option value="2">Puntos</option>
			<option value="0">Ninguno</option>
		</param>
		
		<param name="moduleclass_sfx" type="text" default="" label="Clase de Sufijo del Modulo" description="PARAMMODULECLASSSUFFIX" />
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="cache" type="list" default="1" label="Cache" description="Seleccione si desea usar la cache">
					<option value="1">Usar global</option>
					<option value="0">Sin cache</option>
				</field>
				
				<field name="count" type="text" default="10" label="Cambiar el número de miembros a mostrar" description="Número de miebros a mostrar en el Top (Por defecto 10)" />
				
				<field name="show_avatar" type="list" default="1" label="Mostrar avatar" description="Seleccione si desea mostrar los avatares">
					<option value="1">Si</option>
					<option value="0">No</option>
				</field>
				
				<field name="show_karma" type="list" default="1" label="Mostrar Karma / Puntos" description="Seleccione si desea mostrar el Karma o los Puntos">
					<option value="1">Karma</option>
					<option value="2">Puntos</option>
					<option value="0">Ninguno</option>
				</field>
				
				<field name="moduleclass_sfx" type="text" default="" label="Clase de Sufijo del Modulo" description="PARAMMODULECLASSSUFFIX" />
			</fieldset>
		</fields>
	</config>
</extension>