	<description>JSN Metro 1.1.0 template for JomSocial 3.x</description>
	<params>
		<param type="spacer" default="Applications" />
		<param name="appsShowAuthor" type="radio" default="1" label="Show plugin author" description="::Display the plugin author">
			<option value="1" name='Show'>Show</option>
			<option value="0" name='Hide'>Hide</option>
		</param>
		<param name="colorTheme" type="list" default="Light" label="Color theme" description="::Set the style color">
			<option value="green" name="Light">Light</option>
			<option value="dark" name="Dark">Dark</option>
		</param>

	</params>
